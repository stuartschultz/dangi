<%= form_for @url, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :url, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :short_url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :short_url, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :url_views, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :url_views, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :user_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :short_url_key, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :short_url_key, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                urls_path, :class => 'btn' %>
  </div>
<% end %>
