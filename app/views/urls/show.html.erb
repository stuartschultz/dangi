<%- model_class = @url.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:url) %>:</strong></dt>
  <dd><%= @url.url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:short_url) %>:</strong></dt>
  <dd><%= @url.short_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:url_views) %>:</strong></dt>
  <dd><%= @url.url_views %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @url.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:short_url_key) %>:</strong></dt>
  <dd><%= @url.short_url_key %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              urls_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_url_path(@url), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              url_path(@url),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
